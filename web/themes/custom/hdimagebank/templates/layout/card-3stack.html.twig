{#
/**
 * @file
 * Default theme implementation for a card 3 stack layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
<div{{ attributes.addClass('card', 'clearfix', 'text-center') }}>

  <div{{ region_attributes.first.addClass('card-header','p-0', 'card-img') }}>
    {{ content.first }}
  </div>

  <div{{ region_attributes.second.addClass('card-body') }}>
    {{ content.second }}
  </div>

  <div{{ region_attributes.third.addClass('card-footer','text-muted') }}>
    {{ content.third }}
  </div>

</div>